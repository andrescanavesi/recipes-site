<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="recipe">
        <pattern value="/receta/#{id}/#{title}" />
        <view-id value="/recipe.xhtml" />
    </url-mapping>

    <url-mapping id="search">
        <pattern value="/buscar/#{search}" />
        <view-id value="/index.xhtml" />
    </url-mapping>

    <url-mapping id="about">
        <pattern value="/sobre-este-sitio" />
        <view-id value="/about.xhtml" />
    </url-mapping>

    <url-mapping id="subscription">
        <pattern value="/suscribite" />
        <view-id value="/subscription.xhtml" />
    </url-mapping>

    <url-mapping id="clean-cache">
        <pattern value="/clean-cache" />
        <view-id value="/index.xhtml?cleanCache=true" />
    </url-mapping>

    <url-mapping id="celiacos">
        <pattern value="/recetas/celiacos" />
        <view-id value="/index.xhtml?onlyCeliacsRecipes=true" />
    </url-mapping>

    <url-mapping id="politica">
        <pattern value="/politica-privacidad" />
        <view-id value="/politica-privacidad.xhtml" />
    </url-mapping>

    <url-mapping id="terminos">
        <pattern value="/terminos-y-condiciones" />
        <view-id value="/terminos-y-condiciones.xhtml" />
    </url-mapping>

    <url-mapping id="keyword">
        <pattern value="/recetas/keyword/#{keyword}" />
        <view-id value="/index.xhtml" />
    </url-mapping>

    <url-mapping id="category">
        <pattern value="/recetas/categoria/#{category}" />
        <view-id value="/index.xhtml" />
    </url-mapping>

    <url-mapping id="facebook">
        <pattern value="/facebook" />
        <view-id value="/facebook.xhtml" />
    </url-mapping>
</pretty-config>